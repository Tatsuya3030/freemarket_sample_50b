.wrapper
  -#= render 'shared/header'
  -#= render 'shared/register-breadcrumbs'

  .container.clearfix

    -#= render 'leftbar-register'

    .main
      .content
        .head-profile
          %span 本人情報の登録

        .register-profile
          .head-description
            %p.innertex
              お客様の本人情報をご登録ください。
              %br
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
          %p.innertex.upload-description.text-right
            = link_to '#' do
              %span 本人確認書類のアップロードについて
              =fa_icon 'chevron-right',class:"fa-chevron-right"

          .form-require
            %label お名前
            %p.innertex.mypage-user__name
              芽瑠狩 買人
              -#= user.name

          .form-require
            %label お名前カナ
            %p.innertex.mypage-user__name-kana
              メルカリ カウト
              -#= user.name_kana

          .form-require
            %label 生年月日
            %p.innertex.mypage-user__birthday
              1998/07/07
              -#=current_user.birthday.strftime("%Y/%m/%d")


          .form-require
            %label 郵便番号
            %strong.form-require__form-arbitrary 任意
            .form-require__zipcode
            = form_with do |f|
              = f.text_field :introduction, type: 'input', class: 'input-default', placeholder: '例）1234567'

          .form-require
            %label 都道府県
            %strong.form-require__form-arbitrary 任意
            .form-require__prefecture
              = form_with do |f|
                = f.select :region, [['北海道'],['青森県'],['岩手県'],['宮城県'],['秋田県'],['山形県'],['福島県'],['茨城県'],['栃木県'],['群馬県'],['埼玉県'],['千葉県'],['東京都'],['神奈川県'],['新潟県'],['富山県'],['石川県'],['福井県'],['山梨県'],['長野県'],['岐阜県'],['静岡県'],['愛知県'],['三重県'],['滋賀県'],['京都府'],['大阪府'],['兵庫県'],['奈良県'],['和歌山県'],['鳥取県'],['島根県'],['岡山県'],['広島県'],['山口県'],['徳島県'],['香川県'],['愛媛県'],['高知県'],['福岡県'],['佐賀県'],['長崎県'],['熊本県'],['大分県'],['宮崎県'],['鹿児島県'],['沖縄県'],['未定']], prompt: '--'
                =fa_icon 'chevron-down',class:"fa-chevron-down"

          .form-require
            %label 市区町村
            %strong.form-require__form-arbitrary 任意
            .form-require__city
            = form_with do |f|
              = f.text_field :introduction, type: 'input', class: 'input-default', placeholder: '例）横浜市緑区'

          .form-require
            %label 番地
            %strong.form-require__form-arbitrary 任意
            .form-require__number
            = form_with do |f|
              = f.text_field :introduction, type: 'input', class: 'input-default', placeholder: '例）青山1-1-1'

          .form-require
            %label 建物名
            %strong.form-require__form-arbitrary 任意
            .form-require__building
            = form_with do |f|
              = f.text_field :introduction, type: 'input', class: 'input-default', placeholder: '例）柳ビル103'

          .register-profile__btn
            = form_with do |f|
              = f.submit "登録する", class: "btn-default btn-red"

          %p.innertex.lower-upload-description.text-right
            = link_to '#', class: 'text-right--lower' do
              %span 本人情報の登録について
              =fa_icon 'chevron-right',class:"fa-chevron-right"

  -#= render 'shared/sell-btn'
  -#= render "shared/app-banner"